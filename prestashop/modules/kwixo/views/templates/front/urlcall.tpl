product name=products_ht}			<tr>				<td>{$product.name}</td>				<td>{$product.cart_quantity}</td>				<td id="total">{$product.total_wt} &euro;</td>			</tr>		{/foreach}		<tr>			<td colspan="2"></td>			<td id="total_payed">{l s='Total shipping' mod='kwixo'} : {$total_shipping} &euro;</td>		</tr>		<tr>			<td colspan="2"></td>			<td id="total_payed">{l s='Total payed' mod='kwixo'} : {$amount} &euro;</td>		</tr>	</table>{/if}